%h1 Listing events

%table
  %tr
    %th Name
    %th Planned date
    %th Actual date
    %th Type
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.name
      %td= event.planned_date
      %td= event.actual_date
      %td= event.type
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_event_path(event)
      %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }

