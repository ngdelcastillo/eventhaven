  %body
    / start: Header
    %header
      / start: Container
      .container
        / start: Navbar
        .navbar.navbar-inverse
          .navbar-inner
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => "/"}
              %i.ico-charts.circle
              Event
              %span>Haven
              \.
            .nav-collapse.collapse
              %ul.nav
                %li.active.dropdown
                  %a{:href => "/"} Home
                %li
                  %a{:href => "/directory"} Directory
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Features
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      Customer
                      %ul
                        %li
                          %a{:href => "#"} Bidding
                        %li
                          %a{:href => "#"} Customer Rating
                    %li.divider
                    %li
                      Supplier
                      %ul
                        %li
                          %a{:href => "#"} Free Posting
                        %li
                          %a{:href => "#"} Target Right Market
                        %li
                          %a{:href => "#"} Statistics
                %li
                  %a{:href => "#"} Pricing
                %li
                  %a{:href => "#"} Blog
                %li
                  %a{:href => "#"} Contact
                %li.portal
                  %a{:href => "/dashboard/index"} Dashboard
        / end: Navbar
      / end: Container
    / end: Header
    = bootstrap_flash
    = yield
    / start: Footer Menu
    #footer-menu.hidden-tablet.hidden-phone
      / start: Container
      .container
        / start: Row
        -# .row
        -#   / start: Footer Menu Logo
        -#   .span2
        -#     #footer-menu-logo
        -#       #logo-chart
        -#       %a.brand{:href => "#"}
        -#         Event
        -#         %span>Haven
        -#         \.
        -#   / end: Footer Menu Logo
        -#   / start: Footer Menu Links
        -#   .span9
        -#     #footer-menu-links
        -#       %ul#footer-nav
        -#         %li
        -#           %a{:href => "index.html"} Start
        -#         %li
