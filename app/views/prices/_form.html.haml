= form_for @price do |f|
  - if @price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@price.errors.count, "error")} prohibited this price from being saved:"
      %ul
        - @price.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :offer
    = f.text_field :offer
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :currency
    = f.text_field :currency
  .field
    = f.label :details
    = f.text_field :details
  .actions
    = f.submit 'Save'
