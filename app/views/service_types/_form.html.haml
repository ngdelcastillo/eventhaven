= form_for @service_type do |f|
  - if @service_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service_type.errors.count, "error")} prohibited this service_type from being saved:"
      %ul
        - @service_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :details
    = f.text_field :details
  .actions
    = f.submit 'Save'
